{
	"compilerOptions": {
		"module": "ES2020",
		"lib": ["ES2020", "DOM"],
		"outDir": "out/tsc/",
		"target": "ES6",
		"incremental": true,
		"noImplicitAny": true,
		"strict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": false,
		"allowJs": true,
		"moduleResolution": "node"
	},
	"include": ["src/**/*"]
}
