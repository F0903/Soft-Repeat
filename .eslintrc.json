{
	"root": true,
	"plugins": [
		"@typescript-eslint"
	],
    "extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],
    "parser": "@typescript-eslint/parser",
    "rules": {
		"brace-style": [
			"error",
			"allman"
		],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}