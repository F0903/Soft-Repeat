{
    "name": "Soft Repeat",
    "version": "0.9",
    "description": "An extension that lets you repeat a YouTube video between two custom points in time, easily fading in and out.",
    "icons": {
        "16": "media/Soft Repeat Logo.png",
        "32": "media/Soft Repeat Logo.png",
        "48": "media/Soft Repeat Logo.png",
        "128": "media/Soft Repeat Logo.png"
    },
    "permissions": [
        "declarativeContent",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "css": [
                "src/css/repeaterStyle.css"
            ],
            "js": [
				"dist/js/main.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 3
}